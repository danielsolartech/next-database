{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "declaration": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./lib"
  },
  "exclude": [
    "./node_modules/",
    "./lib/"
  ],
  "include": [
    "./src"
  ]
}